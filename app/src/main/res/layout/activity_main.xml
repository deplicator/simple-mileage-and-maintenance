<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_screen_gas"
        android:id="@+id/gas_enterinfo_btn"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/bt_to_screen_maint"
        android:layout_alignStart="@+id/bt_to_screen_maint"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/bt_to_screen_maint"
        android:layout_alignEnd="@+id/bt_to_screen_maint" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_screen_maint"
        android:id="@+id/bt_to_screen_maint"
        android:layout_below="@+id/gas_enterinfo_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_screen_repair"
        android:id="@+id/bt_to_screen_repair"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/bt_to_screen_maint"
        android:layout_alignLeft="@+id/bt_to_screen_maint"
        android:layout_alignStart="@+id/bt_to_screen_maint"
        android:layout_alignRight="@+id/bt_to_screen_maint"
        android:layout_alignEnd="@+id/bt_to_screen_maint" />

</RelativeLayout>
